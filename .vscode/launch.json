    "version": "0.2.0",
    "configurations": [
        {
            "apiVersion": 1,
            "name": "Connect to server",
            "type": "go",
            "request": "attach",
            "mode": "remote",
            "remotePath": "${workspaceFolder}",
            "port": 43813,
            "host": "127.0.0.1"
        },
        {
            "name": "Attach to Process",
            "type": "go",
            "request": "attach",
            "mode": "local",
            "processId": 0 
        },
        {
            "name": "Launch Server",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "./server/cmd"
        },

        {
            "name": "Launch Client",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "./client/cmd"
        }
    ]
}